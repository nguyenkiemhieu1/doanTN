<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_update"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/defaultbackground"></androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimg_update_hinh"
        android:layout_width="@dimen/_180dp"
        android:layout_height="@dimen/_180dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/b"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"></de.hdodenhof.circleimageview.CircleImageView>

    <ImageView
        android:id="@+id/img_hinhanhupdate"
        android:layout_width="@dimen/_70dp"
        android:layout_height="@dimen/_70dp"
        android:layout_gravity="center"
        android:padding="@dimen/_2dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_mini_themhinh"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp">

            <TextView
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_40dp"
                android:fontFamily="@font/arial"
                android:text="@string/hoten"
                android:textColor="@color/black"
                android:textSize="@dimen/_20dp"></TextView>

            <EditText
                android:id="@+id/edt_hoten"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:baselineAligned="false"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/_20dp"></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp">

            <TextView
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_40dp"
                android:fontFamily="@font/arial"
                android:text="@string/diachi"
                android:textColor="@color/black"
                android:textSize="@dimen/_20dp"></TextView>

            <EditText
                android:id="@+id/edt_diachi"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/_20dp"></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp">

            <TextView
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_40dp"
                android:fontFamily="@font/arial"
                android:text="@string/sdt"
                android:textColor="@color/black"
                android:textSize="@dimen/_20dp"></TextView>

            <EditText
                android:id="@+id/edt_sdt"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:baselineAligned="false"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/_20dp"></EditText>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_marginTop="110dp"
        android:layout_gravity="bottom"
        android:fontFamily="@font/arial"
        android:textSize="@dimen/_20dp"
        android:text="Cập nhật thông tin"
        android:background="@color/defaultbackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>
</LinearLayout>